{
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "target": "es2021",
    "module": "esnext",
    "strict": true,
    "noEmit": true
  },
  "include": ["**/*.ts", "web/**/*.svelte"]
}
