{
  "name": "slowreader",
  "private": true,
  "type": "module",
  "engines": {
    "node": "~20.5.0"
  },
  "scripts": {
    "clean": "rm -rf api/coverage core/coverage web/coverage web/dist",
    "test:js": "eslint .",
    "test:styles": "stylelint **/*.css **/*.svelte",
    "test:types": "tsc --noEmit",
    "test:checks": "node ./scripts/check-subprotocol.js && node ./scripts/check-versions.js",
    "test:audit": "pnpm audit --prod",
    "test": "pnpm run --recursive --include-workspace-root /^test:/",
    "start": "pnpm run --recursive start"
  },
  "workspaces": [
    "api",
    "core",
    "server",
    "web"
  ],
  "devDependencies": {
    "@logux/eslint-config": "^51.0.1",
    "@logux/stylelint-config": "^0.16.0",
    "@types/node": "^20.4.8",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-perfectionist": "^1.5.1",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "nano-staged": "^0.8.0",
    "postcss-html": "^1.5.0",
    "prettier": "^3.0.1",
    "prettier-plugin-svelte": "^3.0.3",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^15.10.2",
    "svelte": "^4.1.2",
    "tsm": "^2.3.0",
    "typescript": "~5.1.6"
  },
  "pnpm": {
    "overrides": {
      "semver@<7.5.2": ">=7.5.2"
    }
  }
}