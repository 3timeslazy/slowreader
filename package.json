{
  "name": "slowreader",
  "private": true,
  "type": "module",
  "engines": {
    "node": "~20.3.0"
  },
  "scripts": {
    "clean": "rm -rf api/coverage core/coverage web/coverage web/dist",
    "lint": "tsc --noEmit && eslint . && stylelint **/*.css **/*.svelte",
    "checks": "node ./scripts/check-subprotocol.js && node ./scripts/check-node-versions.js",
    "test:run": "pnpm lint && pnpm checks && pnpm audit --prod",
    "test": "pnpm run --recursive --include-workspace-root test:run"
  },
  "workspaces": [
    "api",
    "core",
    "server",
    "web"
  ],
  "devDependencies": {
    "@logux/eslint-config": "^51.0.0",
    "@logux/stylelint-config": "^0.15.1",
    "@types/node": "^20.3.1",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-perfectionist": "^1.2.1",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "nano-staged": "^0.8.0",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.7.0",
    "svelte": "^3.59.1",
    "typescript": "~5.1.3"
  }
}
