{
  "name": "@slowreader/web",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "production": "pnpm build && vite preview",
    "visual": "storybook dev -p 6006 --no-open",
    "start": "vite",
    "size": "pnpm build:web && size-limit",
    "process:css": "tsx ./scripts/clean-vars.ts",
    "process:visual": "mv ./storybook-static ./dist/ui",
    "process": "pnpm run process:visual && pnpm run process:css",
    "build:visual": "NODE_ENV=test storybook build",
    "build:web": "vite build",
    "build": "pnpm run /^build:/ && pnpm run process",
    "test:unit": "pnpm bnt",
    "test:css": "stylelint **/*.css **/*.svelte",
    "test:build": "pnpm build && size-limit",
    "test": "pnpm run /^test:/",
    "format:stylelint": "stylelint --fix **/*.{css,pcss,svelte}"
  },
  "dependencies": {
    "@csstools/postcss-oklab-function": "3.0.8",
    "@evilmartians/harmony": "1.2.0",
    "@logux/client": "github:logux/client#next",
    "@logux/core": "0.8.5",
    "@mdi/js": "7.3.67",
    "@nanostores/i18n": "0.12.0",
    "@nanostores/persistent": "0.9.1",
    "@nanostores/router": "0.11.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@slowreader/core": "link:../core",
    "@sveltejs/vite-plugin-svelte": "3.0.1",
    "autoprefixer": "10.4.16",
    "just-debounce-it": "3.2.0",
    "nanoid": "5.0.4",
    "nanostores": "0.9.5",
    "picocolors": "1.0.0",
    "postcss": "8.4.32",
    "postcss-pseudo-classes": "0.4.0",
    "postcss-relative-opacity": "0.1.0",
    "rollup": "4.9.1",
    "svelte": "4.2.8",
    "svelte-preprocess": "5.1.3",
    "tsx": "4.7.0",
    "vite": "5.0.10"
  },
  "devDependencies": {
    "@logux/stylelint-config": "0.17.0",
    "@size-limit/file": "11.0.1",
    "@storybook/addon-svelte-csf": "4.0.13",
    "@storybook/addon-themes": "7.6.6",
    "@storybook/svelte": "7.6.6",
    "@storybook/svelte-vite": "7.6.6",
    "better-node-test": "0.4.1",
    "browserslist": "4.22.2",
    "size-limit": "11.0.1",
    "storybook": "7.6.6",
    "stylelint": "16.0.2"
  }
