{
  "name": "@slowreader/web",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "production": "pnpm build && vite preview",
    "visual": "storybook dev -p 6006 --no-open",
    "start": "vite",
    "size": "pnpm build:web && size-limit",
    "process:css": "tsx ./scripts/clean-vars.ts",
    "process:visual": "mv ./storybook-static ./dist/ui",
    "process": "pnpm run process:visual && pnpm run process:css",
    "build:visual": "NODE_ENV=test storybook build",
    "build:web": "vite build",
    "build": "pnpm run /^build:/ && pnpm run process",
    "test:unit": "pnpm bnt",
    "test:names": "tsx ./scripts/check-names.ts",
    "test:css": "stylelint **/*.css **/*.svelte",
    "test:build": "pnpm build && size-limit",
    "test": "pnpm run /^test:/",
    "format:stylelint": "stylelint --fix **/*.{css,pcss,svelte}"
  },
  "dependencies": {
    "@csstools/postcss-oklab-function": "3.0.9",
    "@evilmartians/harmony": "1.2.0",
    "@logux/client": "github:logux/client#next",
    "@logux/core": "0.8.5",
    "@mdi/js": "7.4.47",
    "@nanostores/i18n": "0.12.0",
    "@nanostores/persistent": "0.9.1",
    "@nanostores/router": "0.13.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@slowreader/core": "link:../core",
    "@sveltejs/vite-plugin-svelte": "3.0.2",
    "autoprefixer": "10.4.17",
    "nanoid": "5.0.4",
    "nanostores": "0.9.5",
    "picocolors": "1.0.0",
    "postcss": "8.4.33",
    "postcss-relative-opacity": "0.1.0",
    "rollup": "4.9.6",
    "svelte": "4.2.9",
    "svelte-preprocess": "5.1.3",
    "tsx": "4.7.0",
    "vite": "5.0.12"
  },
  "devDependencies": {
    "@logux/stylelint-config": "0.18.0",
    "@size-limit/file": "11.0.2",
    "@storybook/addon-svelte-csf": "4.1.0",
    "@storybook/addon-themes": "7.6.10",
    "@storybook/svelte": "7.6.10",
    "@storybook/svelte-vite": "7.6.10",
    "better-node-test": "0.5.0",
    "browserslist": "4.22.3",
    "postcss-html": "1.6.0",
    "postcss-nesting": "12.0.2",
    "postcss-selector-parser": "6.0.15",
    "size-limit": "11.0.2",
    "storybook": "7.6.10",
    "stylelint": "16.2.0"
  }
}
